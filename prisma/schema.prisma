generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Anuncio {
  id                String   @id @default(uuid())
  link              String   @unique
  tituloAnuncio     String
  precoEmCentavos   Int
  quantidadeEmItens Int
  disponivel        Boolean  @default(true)
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  // AutoreferÃªncia para variantes
  anuncioPrincipalId String?
  anuncioPrincipal   Anuncio?  @relation("AnuncioVariantes", fields: [anuncioPrincipalId], references: [id], onDelete: Cascade)
  variantes          Anuncio[] @relation("AnuncioVariantes")
}
